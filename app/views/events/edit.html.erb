<%= form_for @event, html: { multipart: true } do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
  
    <%= f.label :venue %>
    <%= f.text_field :venue %>
  
    <%= f.label :date %>
    <%= f.date_field :date %>
  
    <%= f.label :fees_charged %>
    <%= f.number_field :fees_charged %>
  
    <%= f.label :poster %>
    <%= f.file_field :poster %>
  
    <!-- Add other event fields here -->
  
    <%= f.submit %>
  <% end %>