<%= form_with(model: [@bike, @review], local: true) do |form| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, 'error') %> prohibited this review from being saved:</h2>
  
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :author %>
      <%= form.text_field :author %>
    </div>
  
    <div class="field">
      <%= form.label :rating %>
      <%= form.number_field :rating %>
    </div>
  
    <div class="field">
      <%= form.label :comments %>
      <%= form.text_area :comments %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  